<h1 class="text-center">New Animal</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for @animal do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add Animal", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
