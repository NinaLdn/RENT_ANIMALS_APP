<div class="wrapper">
  <div class="animal-container">


    <div class="animal-picture" style='border-radius:20px'>

      <%= cl_image_tag @animal.photo, crop: :fill, class: "picture-of-the-animal" %>

    </div>

    <div class="animal-description">

      <div class="animal-description-top">
        <h1 style= "margin-top:0px"><%= @animal.name %></h1>
        <p><%= @animal.description %></p>
      </div>

      <div class='icons-bar'>
        <p> <strong> Les avantages de ChattesPoullettes </strong></p>
        <div class = 'icons-advantages' style='display:inline-block'>
          <div class='icon-fast'>
            <%= image_tag '001-dog.png' %>
            <p>Rapide</p>
          </div>
          <div class='icon-cruelty'>
            <%= image_tag '004-heart.png' %>
            <p>Sans cruauté</p>
          </div>
          <div class='icon-certified'>
            <%= image_tag '005-cat.png' %>
            <p>Maxi fun</p>
          </div>
        </div>
      </div>

      <div class="animal-description-bottom">

        <div class="animal-price-book">

            <p><strong><%= @animal.price %> €</strong>/jour</p>

            <%= link_to "Book now", new_animal_booking_path(@animal), class: "btn-hover color-1" %>

        </div>

        <div class="animal-edit-delete">
          <% if current_user == @animal.user %>
          <%= link_to "Edit", edit_animal_path(@animal), class: "btn btn-info" %>
          <%= link_to "Delete", animal_path(@animal),
                method: :delete,
                data: { confirm: "Are you sure?" }, id:"btn-animal-edit", class: "btn btn-danger" %>
          <% end %>
        </div>

      </div>


    </div>
  </div>
  <div class="animal-back-index">
  <%= link_to "Back Index", animals_path, id:"btn-back-index", class: "btn btn-primary" %>
  </div>
</div>

